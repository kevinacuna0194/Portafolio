@{
    ViewData["Title"] = "Contacto";
}

<h1 class="text-center my-5">Formulario de Contacto</h1>

<form asp-controller="Home" asp-action="Contacto" class="container">
    <div class="row row-cols-1 row-cols-md-2 justify-content-md-center align-items-md-center">
        <fieldset>
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre:</label>
                <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Ingrese su Nombre" />
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="emial" id="email" class="form-control" name="email" placeholder="correo@correo.com" />
            </div>
            <div class="mb-3">
                <label for="mensaje" class="form-label">Mensaje:</label>
                <textarea class="form-control" id="mensaje" name="mensaje" rows="3"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Enviar</button>
        </fieldset>
    </div>
</form>